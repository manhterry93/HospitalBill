<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!--Login-->
    <style name="LoginHeader">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/login_content_header_text_size</item>
        <item name="android:layout_marginBottom">@dimen/login_content_header_margin_bottom</item>
    </style>

    <style name="LoginInput">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/login_content_text_size</item>
        <item name="android:textColorHint">@color/color_grey_light</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:paddingLeft">@dimen/login_content_input_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/login_content_input_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/login_content_input_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/login_content_input_padding_vertical</item>
        <item name="android:background">@drawable/login_input_bgr</item>
    </style>

    <style name="MainNavigation">
        <item name="android:itemBackground">@color/bgr_color</item>
        <item name="itemTextColor">@color/color_white</item>
        <item name="itemIconTint">@color/color_white</item>
    </style>

    <style name="DefaultText">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="Doctor.Header" parent="DefaultText">
        <item name="android:layout_marginLeft">@dimen/doctor_header_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/doctor_header_margin_horizontal</item>
        <item name="android:textSize">@dimen/doctor_header_text_size</item>
    </style>

    <style name="Doctor.Content" parent="DefaultText">
        <item name="android:layout_marginLeft">@dimen/doctor_content_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/doctor_content_margin_horizontal</item>
        <item name="android:textSize">@dimen/doctor_content_text_size</item>
    </style>

    <style name="Search.Header" parent="DefaultText">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Record.HeaderItem" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Record.ItemText" parent="DefaultText">
        <item name="android:textSize">@dimen/record_text_size</item>
    </style>
</resources>
